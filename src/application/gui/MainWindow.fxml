<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<fx:root prefHeight="600.0" prefWidth="800.0" type="VBox" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <MenuBar>
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem fx:id="loadRecipiesButton" mnemonicParsing="false" onAction="#onLoadRecipiesButoonClicked" text="Load Recipies" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
                  <RadioMenuItem fx:id="defaultCssButton" mnemonicParsing="false" onAction="#onDefaultCssClicked" text="Default">
                     <toggleGroup>
                        <ToggleGroup fx:id="cssGroup" />
                     </toggleGroup></RadioMenuItem>
                  <RadioMenuItem fx:id="darkCssButton" mnemonicParsing="false" onAction="#onDarkCssClicked" text="Dark" toggleGroup="$cssGroup" />
                  <SeparatorMenuItem mnemonicParsing="false" />
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <SplitPane dividerPositions="0.23036649214659685, 0.5881326352530541" orientation="VERTICAL">
        <items>
            <VBox>
               <children>
                  <TextField fx:id="allRecipesFilter" />
                  <ListView fx:id="allRecipes" />
               </children>
            </VBox>
            <SplitPane dividerPositions="0.5">
              <items>
                  <VBox />
                  <ListView fx:id="list" />
              </items>
            </SplitPane>
            <VBox>
               <children>
                  <CheckBox mnemonicParsing="false" text="Consolidate" />
                  <TreeTableView>
                    <columns>
                      <TreeTableColumn prefWidth="75.0" text="Item Name" />
                      <TreeTableColumn prefWidth="75.0" text="Total / sec" />
                        <TreeTableColumn prefWidth="75.0" text="Y Belt" />
                        <TreeTableColumn prefWidth="75.0" text="R Belt" />
                        <TreeTableColumn prefWidth="75.0" text="B Belt" />
                    </columns>
                  </TreeTableView>
               </children>
            </VBox>
        </items>
      </SplitPane>
   </children>
</fx:root>
