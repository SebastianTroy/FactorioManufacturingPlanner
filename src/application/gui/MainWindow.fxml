<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.AnchorPane?>

<VBox prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.gui.MainWindow">
   <children>
      <MenuBar VBox.vgrow="ALWAYS">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem fx:id="loadRecipiesButton" mnemonicParsing="false" onAction="#onLoadRecipiesButoonClicked" text="Load Recipies" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
                  <RadioMenuItem fx:id="defaultCssButton" mnemonicParsing="false" onAction="#onDefaultCssClicked" text="Default">
                     <toggleGroup>
                        <ToggleGroup fx:id="cssGroup" />
                     </toggleGroup>
                  </RadioMenuItem>
                  <RadioMenuItem fx:id="darkCssButton" mnemonicParsing="false" onAction="#onDarkCssClicked" text="Dark" toggleGroup="$cssGroup" />
                  <SeparatorMenuItem mnemonicParsing="false" />
              <MenuItem disable="true" mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
      <TitledPane animated="false" collapsible="false" expanded="false" text="Factory Options" VBox.vgrow="ALWAYS" />
      <TitledPane text="Factory Outputs" VBox.vgrow="ALWAYS">
         <content>
            <GridPane hgap="5.0" vgap="5.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" />
                  <ColumnConstraints hgrow="NEVER" />
                <ColumnConstraints hgrow="SOMETIMES" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints maxHeight="30.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints vgrow="SOMETIMES" />
                  <RowConstraints vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <TableView fx:id="factoryProductsTable" editable="true" GridPane.columnIndex="2" GridPane.rowSpan="3">
                     <columns>
                        <TableColumn fx:id="factoryProductsTableProductNameColumn" editable="false" prefWidth="75.0" text="Item Name" />
                        <TableColumn fx:id="factoryProductsTableProductionRateColumn" prefWidth="75.0" text="Count" />
                        <TableColumn fx:id="factoryProductsTableProductionRateUnitColumn" prefWidth="75.0" text="Per" />
                     </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
                  <TextField fx:id="allRecipesFilter" promptText="Filter crafting recipes" />
                  <ListView fx:id="allRecipesList" GridPane.rowIndex="1" GridPane.rowSpan="2" />
                  <AnchorPane GridPane.columnIndex="1" GridPane.rowIndex="1">
                     <children>
                        <Button fx:id="addFactoryProduct" mnemonicParsing="false" onAction="#onAddFactoryProductPressed" text="&gt;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" GridPane.columnIndex="1" GridPane.hgrow="NEVER" GridPane.rowIndex="1" />
                     </children>
                  </AnchorPane>
                  <AnchorPane GridPane.columnIndex="1" GridPane.rowIndex="2">
                     <children>
                        <Button fx:id="removeFactoryProduct" mnemonicParsing="false" onAction="#onRemoveFactoryProductPressed" text="&lt;" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" GridPane.columnIndex="1" GridPane.hgrow="NEVER" GridPane.rowIndex="2" />
                     </children>
                  </AnchorPane>
               </children>
            </GridPane>
         </content>
      </TitledPane>
      <TitledPane text="Factory" VBox.vgrow="ALWAYS">
         <content>
            <TreeTableView fx:id="factoryIntermediariesTable">
              <columns>
                  <TreeTableColumn fx:id="factoryIntermediariesTableIntermediaryName" prefWidth="75.0" text="Recipe" />
                <TreeTableColumn fx:id="factoryIntermediariesTableIntermediaryItemName" prefWidth="75.0" text="Item Name" />
                <TreeTableColumn fx:id="factoryIntermediariesTableCountPerSecond" prefWidth="75.0" text="Total / sec" />
                  <TreeTableColumn prefWidth="75.0" text="Y Belt" />
                  <TreeTableColumn prefWidth="75.0" text="R Belt" />
                  <TreeTableColumn prefWidth="75.0" text="B Belt" />
              </columns>
               <columnResizePolicy>
                  <TreeTableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TreeTableView>
         </content>
      </TitledPane>
      <TitledPane text="Factory Inputs" VBox.vgrow="ALWAYS">
         <content>
            <TableView>
              <columns>
                <TableColumn editable="false" prefWidth="75.0" text="Item Name" />
                <TableColumn editable="false" prefWidth="75.0" text="Count (sec)" />
                  <TableColumn editable="false" prefWidth="75.0" text="Belts required" />
                  <TableColumn editable="false" prefWidth="75.0" text="Buildings required" />
                  <TableColumn editable="false" prefWidth="75.0" text="Column X" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
         </content>
      </TitledPane>
   </children>
</VBox>
